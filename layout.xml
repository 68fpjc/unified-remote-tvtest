<?xml version="1.0" encoding="utf-8"?>
<layout onlaunch="launch">
    <row>
        <space />
        <button icon="up" ontap="stroke,up" />
        <space />
    </row>
    <row>
        <button icon="left" ontap="stroke,left" />
        <button icon="select" ontap="stroke,enter" />
        <button icon="right" ontap="stroke,right" />
    </row>
    <row>
        <space />
        <button icon="down" ontap="stroke,down" />
        <space />
    </row>
    <row>
        <button color="blue" text="Channel" ontap="channeldisplay" />
        <button color="blue" text="Service" ontap="service" />
        <button color="blue" text="Audio" ontap="switchaudio" />
    </row>
    <row>
        <button text="1" ontap="stroke,digit1" />
        <button text="2" ontap="stroke,digit2" />
        <button text="3" ontap="stroke,digit3" />
    </row>
    <row>
        <button text="4" ontap="stroke,digit4" />
        <button text="5" ontap="stroke,digit5" />
        <button text="6" ontap="stroke,digit6" />
    </row>
    <row>
        <button text="7" ontap="stroke,digit7" />
        <button text="8" ontap="stroke,digit8" />
        <button text="9" ontap="stroke,digit9" />
    </row>
    <row>
        <button color="blue" text="EPG" ontap="epg" />
        <button text="0" ontap="stroke,digit0" />
        <button color="blue" text="Full Screen" ontap="fullscreen" />
    </row>
</layout>
